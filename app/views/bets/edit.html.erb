<%= form_for :bets, url: match_pool_bets_path(@match_pool), method: :patch do |b| %>

  <% @bets.each do |b|  %>

    <%= fields_for 'bets[]', b do |bet| %>
    <div class="match">
      <fieldset>
        <div class="field">
          <%= bet.label :home, b.match.home_team.name %>
          <%= bet.number_field :home %>
        </div>

        <div class="field">
          <%= bet.label :away, b.match.away_team.name %>
          <%= bet.number_field :away %>
        </div>
      </fieldset>
      <div class="when">
        <span><%= b.match.date %></span>
        <span><%= b.match.time %></span>
      </div>
    </div>
    <% end %>

  <% end %>

  <%= b.button %>
<% end %>
