<article class="">
  <h1>Usuarios</h1>

  <ul class="list">
    <% @users.each do |user| %>
    <li class="item">
      <div class="status">
        <span class="<%= 'on' if user.remember_digest %>"><%= icon 'mappin' %></span>
        <span class="<%= 'on' if user.uid %>"><%= icon 'chat' %></span>
        <span class="<%= 'on' if user.admin? %>"><%= icon 'glasses' %></span>
      </div>

      <div class="main user">
        <div class="name"><%= user.name %></div>
        <div class="email"><%= user.email %></div>
      </div>

      <div class="actions">
        <%= link_to edit_user_path(user), class: 'btn-med' do %>
          <%= icon 'pencil' %><span>Editar</span>
        <% end %>

        <%= link_to user, method: :delete, class: 'btn-med btn-danger' do %>
          <%= icon 'delete' %><span>Borrar</span>
        <% end %>
      </div>
    </li>
    <% end %>
  </ul>

</article>
